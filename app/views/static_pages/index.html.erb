<div class="post" ng-repeat="post in posts">
  <header class="page-header">
    <h1>
      {{ post.title }}
      <br>
      <small>by {{ post.author }}</small>
    </h1>
  </header>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <p>{{ post.body }}</p>
    </div>
  </div>

  <div class="row comments">
    <div class="comment col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-2" ng-repeat="comment in post.comments">
      <h3>{{ comment.author }} <small>said:</small></h3>
      <p>{{ comment.body }}</p>
    </div>
  </div>
</div>

